sudo su
yum update -y && sudo yum install -y sudo tar unzip wget java-11-openjdk-headless
mkdir /usr/local/tomcat
groupadd tomcat
useradd -M -s /bin/nologin -g tomcat -d /usr/local/tomcat tomcat
chown -R tomcat:tomcat /usr/local/tomcat
wget -nv --no-cookies "http://mirror.metrocast.net/apache/tomcat/tomcat-8/v8.5.56/bin/apache-tomcat-8.5.56.tar.gz" -O /tmp/tomcat8.tar.gz
tar -zxf /tmp/tomcat8.tar.gz -C /usr/local/tomcat --strip-components=1
rm -rf /tmp/tomcat8.tar.gz

vim /usr/local/tomcat8/webapps/manager/META-INF/context.xml
vim /usr/local/tomcat8/webapps/host-manager/META-INF/context.xml
vim /etc/systemd/system/tomcat.service

firewall-cmd --permanent --zone=public --add-port=8080/tcp
firewall-cmd --reload

systemctl daemon-reload
systemctl enable tomcat
systemctl start tomcat
#systemctl restart tomcat
